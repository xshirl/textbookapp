<% include ../../partials/boilerplate %>

<div class="form-page">
<div class="add">

<form action="/textbooks" method="POST">
  <input type="text" name="title" placeholder="Title" /><br>
  <input type="text" name="author" placeholder="Author" /><br>
  <input type="text" name="price" placeholder="Price" /><br>
  <input type="text" name="rating" placeholder="Rating" /><br>
  <input type="text" name="img" placeholder="Image URL" /><br>
  <select name="genre_id">
    <% genres.forEach((genre) => { %>
      <option value="<%=genre.id%>"><%=genre.name%></option>
    <% }) %>
  </select> <br>
  <input type="submit" value="Add Textbook" />
</form>
</div>
<a href="/textbook"> Back to Textbooks </a>
</div>

<% include ../../partials/end %>
